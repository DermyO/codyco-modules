<!-- 
Scope for force/torque sensor measurements in the iCub feet 
Author: Serena Ivaldi 

This xml file must be used with yarpscope: it plots by columns the forces and moments of the 6 axis F/T sensors of the iCub feet, and the estimated forces/moments relying on the other 6 axis FT sensor in the legs. -->

<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="6" carrier="mcast">

  
    
<!-- RIGHT LEG -->

    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="RIGHT FOOT - from FTS right leg - Forces"
          minval="-200"
          maxval="200"
          bgcolor="#CCFFFF">
        <graph remote="/icub/right_leg/analog:o"
               index="0"
               color="Red"
               title="F1"
               type="lines"
               size="2" />
        <graph remote="/icub/right_leg/analog:o"
               index="1"
               color="Green"
               title="F2"
               size="2"
               type="lines" />
        <graph remote="/icub/right_leg/analog:o"
               index="2"
               color="Blue"
               title="F3"
               size="2"
               type="lines" />
    </plot>
    
    <plot gridx="0"
          gridy="1"
          hspan="1"
          vspan="1"
          title="RIGHT FOOT - from FTS right leg - Moments"
          minval="-15"
          maxval="15"
          bgcolor="#33FFFF">
        <graph remote="/icub/right_leg/analog:o"
               index="3"
               color="Red"
               title="M1"
               size="2"
               type="lines" />
        <graph remote="/icub/right_leg/analog:o"
               index="4"
               color="Green"
               title="M2"
               size="2"
               type="lines" />
        <graph remote="/icub/right_leg/analog:o"
               index="5"
               color="Blue"
               title="M3"
               size="2"
               type="lines" />
    </plot>
    
        
    <!-- RIGHT FOOT -->

    <plot gridx="1"
          gridy="0"
          hspan="1"
          vspan="1"
          title="RIGHT FOOT - FTS - forces"
          size="60"
          minval="-200"
          maxval="200"
          bgcolor="#CCFFFF">
        <graph remote="/icub/right_foot/analog:o"
               index="0"
               color="Red"
               title="F1"
               type="lines"
               size="2" />
        <graph remote="/icub/right_foot/analog:o"
               index="1"
               color="Green"
               title="F2"
               size="2"
               type="lines" />
        <graph remote="/icub/right_foot/analog:o"
               index="2"
               color="Blue"
               title="F3"
               size="2"
               type="lines" />
    </plot>
    
    <plot gridx="1"
          gridy="1"
          hspan="1"
          vspan="1"
          title="RIGHT FOOT - FTS - moments"
          minval="-15"
          maxval="15"
          bgcolor="#33FFFF">
        <graph remote="/icub/right_foot/analog:o"
               index="3"
               color="Red"
               title="M1"
               size="2"
               type="lines" />
        <graph remote="/icub/right_foot/analog:o"
               index="4"
               color="Green"
               title="M2"
               size="2"
               type="lines" />
        <graph remote="/icub/right_foot/analog:o"
               index="5"
               color="Blue"
               title="M3"
               size="2"
               type="lines" />
    </plot>
    
        <!-- MISMATCH RIGHT FOOT -->

    <plot gridx="2"
          gridy="0"
          hspan="1"
          vspan="1"
          title="RIGHT FOOT - force error"
          size="60"
          minval="-100"
          maxval="100"
          bgcolor="White">
        <graph remote="/FTSDebugger/right_foot/error:o"
               index="0"
               color="Red"
               title="F1"
               type="lines"
               size="2" />
        <graph remote="/FTSDebugger/right_foot/error:o"
               index="1"
               color="Green"
               title="F2"
               size="2"
               type="lines" />
        <graph remote="/FTSDebugger/right_foot/error:o"
               index="2"
               color="Blue"
               title="F3"
               size="2"
               type="lines" />
    </plot>
    
    <plot gridx="2"
          gridy="1"
          hspan="1"
          vspan="1"
          title="RIGHT FOOT - moment error"
          minval="-10"
          maxval="10"
          bgcolor="LightGrey">
        <graph remote="/FTSDebugger/right_foot/error:o"
               index="3"
               color="Red"
               title="M1"
               size="2"
               type="lines" />
        <graph remote="/FTSDebugger/right_foot/error:o"
               index="4"
               color="Green"
               title="M2"
               size="2"
               type="lines" />
        <graph remote="/FTSDebugger/right_foot/error:o"
               index="5"
               color="Blue"
               title="M3"
               size="2"
               type="lines" />
    </plot>
    
    
