<?xml version="1.0" encoding="UTF-8" ?>

<!-- Plotting monitor parameters of jtc module, that are:
0		tauMeas			Torque of the monitored motor
1		tauDes			Desired torque of the monitored motor
2		tauDesPlusPI	Desired torque plus proportional and integral terms of the monitored motor
3		dq			Velocity of the monitored motor
4		sign dq			Sign of the velocity of the monitored motor
5		pwmOut			PWM commanded to the monitored motor
6		pwmFF			Feedforward part of the PWM commanded to the monitored motor
7		pwmFB			Feedback part of the PWM commanded to the monitored motor
8		pwmTorqueFF		Torque feedforward term of the PWM commanded to the monitored motor
9		pwmFrictionFF	Friction feedforward term of the PWM commanded to the monitored motor
10		pwmMeas			Measured motor PWM
11		tauErr			Torque tracking error
12		q				Joint angle
13		qDes			Desired joint angle
-->

<portscope rows="4" columns="1">
	<plot gridx="0" gridy="0" hspan="1" vspan="1" title="Joint angle (red desired, blue measure)" size="500" minval="-50" maxval="50" bgcolor="white">
		<graph remote="/jtc/monitor:o" index="13" color="Red" title="qDes" type="lines" size="2" />
		<graph remote="/jtc/monitor:o" index="12" color="Blue" title="q" type="lines" size="2" />
	</plot>

    <!-- plotting torque -->
    <plot gridx="0" gridy="1" hspan="1" vspan="1" title="Link Torque Pitch (red desired, blue measure)" size="500" minval="-13" maxval="13" bgcolor="white">
		<graph remote="/jtc/monitor:o" index="0" color="Blue" title="Measured" type="lines" size="2" />
		<graph remote="/jtc/monitor:o" index="1" color="Red" title="Desired" type="lines" size="2" />
    </plot>
    <plot gridx="0" gridy="2" hspan="1" vspan="1" title="Link Torque Yaw (red desired, blue measure)" size="500" minval="-13" maxval="13" bgcolor="white">
		<graph remote="/jtc/monitor:o" index="2" color="Blue" title="Measured" type="lines" size="2" />
		<graph remote="/jtc/monitor:o" index="3" color="Red" title="Desired" type="lines" size="2" />
    </plot>
    <plot gridx="0" gridy="3" hspan="1" vspan="1" title="Link Torque Roll (red desired, blue measure)" size="500" minval="-13" maxval="13" bgcolor="white">
		<graph remote="/jtc/monitor:o" index="4" color="Blue" title="Measured" type="lines" size="2" />
		<graph remote="/jtc/monitor:o" index="5" color="Red" title="Desired" type="lines" size="2" />
    </plot>


</portscope>
